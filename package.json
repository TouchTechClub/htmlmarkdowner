{
	"name": "htmlmarkdowner",
	"version": "1.0.0",
	"description": "Fast HTML to Markdown conversion API with rate limiting and caching",
	"scripts": {
		"dev": "bun run --hot src/index.ts",
		"start": "bun run src/index.ts",
		"build": "bun build --compile --minify --sourcemap --target bun --outfile htmlmarkdowner src/index.ts",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"lint": "biome lint --write .",
		"lint:check": "biome lint .",
		"check": "biome check --write .",
		"check:ci": "biome check .",
		"docker:redis": "docker-compose up -d",
		"docker:redis:down": "docker-compose down",
		"docker:prod:build": "docker-compose -f docker-compose.prod.yml build",
		"docker:prod:up": "docker-compose -f docker-compose.prod.yml up -d",
		"docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
		"docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f"
	},
	"dependencies": {
		"@hono/zod-openapi": "^1.1.3",
		"@mozilla/readability": "^0.6.0",
		"@scalar/hono-api-reference": "^0.9.20",
		"hono": "^4.9.9",
		"hono-rate-limiter": "^0.4.2",
		"jsdom": "^27.0.0",
		"rate-limit-redis": "^4.2.2",
		"redis": "^5.8.3",
		"turndown": "^7.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@types/bun": "latest",
		"@types/jsdom": "^27.0.0",
		"@types/turndown": "^5.0.5"
	}
}